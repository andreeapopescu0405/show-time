@page "/"
@rendermode InteractiveServer

@using Blazorise

<PageTitle>Home</PageTitle>
<h1>Choose your ticket! Live your life!</h1>
<style>
    .hero-carousel {
        position: relative;
    }

    .carousel-slide-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.8));
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        text-align: center;
        padding: 2rem;
        z-index: 2;
    }

        .carousel-slide-overlay h2 {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .carousel-slide-overlay p {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
        }
</style>

<div class="hero-carousel">
    <Carousel @bind-SelectedSlide="@selectedSlide" ShowIndicators AutoCycle Interval="5000">
        <CarouselSlide Name="1">
            <Image Source="https://www.gds.ro/wp-content/uploads/2024/02/intencity-1-jpg.webp" Display="Display.Block" Width="Width.Is100" />
            <div class="carousel-slide-overlay">
                <h2>Intencity Craiova</h2>
                <p>Music, light, and pure energy. Don’t miss the 2025 edition!</p>
                <Button Color="Color.Danger" Size="Size.Large" Clicked="@GoToTickets">Buy ticket</Button>
            </div>
        </CarouselSlide>

        <CarouselSlide Name="2">
            <Image Source="https://www.olgutavasilescu.ro/wp-content/uploads/2022/09/Intencity-Craiova-2022-Day-one-07.jpg" Display="Display.Block" Width="Width.Is100" />
        </CarouselSlide>
    </Carousel>


    <Carousel @bind-SelectedSlide="@selectedSlide" ShowIndicators AutoCycle Interval="5000">
    <CarouselSlide Name="1">
        <Image Source="https://funkytravel.ro/wp-content/uploads/2021/08/untold-.jpg" Display="Display.Block" Width="Width.Is100" />
        <div class="carousel-slide-overlay">
            <h2>Untold Festival</h2>
                <p>Cluj vibrates every summer. Be there!</p>
            <Button Color="Color.Warning" Size="Size.Large" Clicked="@GoToTickets">Buy ticket</Button>
        </div>
    </CarouselSlide>

    <CarouselSlide Name="2">
        <Image Source="https://cdn.oradesibiu.ro/wp-content/uploads/2021/09/UNTOLD2021_3.jpg" Display="Display.Block" Width="Width.Is100" />
    </CarouselSlide>
    </Carousel>

    <Carousel @bind-SelectedSlide="@selectedSlide" ShowIndicators AutoCycle Interval="5000">
    <CarouselSlide Name="1">
        <Image Source="https://cms.thatfestivalsite.com/uploads/Beach_Please_2025_2f2590905b.jpg" Display="Display.Block" Width="Width.Is100" />
        <div class="carousel-slide-overlay">
            <h2>Beach Please</h2>
                <p>The sea, the music, and the summer vibe. Secure your ticket!</p>
            <Button Color="Color.Info" Size="Size.Large" Clicked="@GoToTickets">Buy ticket</Button>
        </div>
    </CarouselSlide>
        <CarouselSlide Name="2">
            <Image Source="https://www.fstvl.io/uploads/media/featured/0001/07/thumb_6362_featured_desktop.jpgs" Display="Display.Block" Width="Width.Is100" />
        </CarouselSlide>
    </Carousel>

</div>

@code {
    private string selectedSlide = "1";

    [Inject] NavigationManager NavigationManager { get; set; }

    private void GoToTickets()
    {
        NavigationManager.NavigateTo("/tickets");
    }
    
}